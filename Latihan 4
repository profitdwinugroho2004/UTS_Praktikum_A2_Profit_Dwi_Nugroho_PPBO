def create_rekening(nama, no_rekening):
    return {
        "nama": nama,
        "no_rekening": no_rekening,
        "saldo": 0
    }

def get_saldo(rekening):
    return rekening["saldo"]

def set_saldo(rekening, nilai):
    if nilai < 0:
        raise ValueError("Saldo tidak boleh negatif")
    rekening["saldo"] = nilai

def tampilkan_data_nasabah(rekening):
    print(f"Nama: {rekening['nama']}")
    print(f"No. Rekening: {rekening['no_rekening']}")
    print(f"Saldo: {rekening['saldo']}")

# Buat object Nasabah 1
nasabah1 = create_rekening("Budi", 5555)
set_saldo(nasabah1, 500000)

# Buat object Nasabah 2
nasabah2 = create_rekening("Wati", 6666)
set_saldo(nasabah2, 2000000)

# Tampilkan data Nasabah 1
tampilkan_data_nasabah(nasabah1)

print("\n")  # Menambahkan baris kosong untuk memisahkan output

# Tampilkan data Nasabah 2
tampilkan_data_nasabah(nasabah2)
